<% if @event.errors.any? %>
    <ul>
      <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>

<div class="form-group">
  <%= f.label :title, "信息標題" %>
</div>
<div>
  <%= f.text_field :title, :class => "form-control" %>
</div>
<div>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, :placeholder => "災情信息內容", :class => "form-control" %>
</div>
	